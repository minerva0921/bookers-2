<h1>User info</h1>

<%= attachment_image_tag user, :profile_image, format: 'jpeg',
  fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<%= link_to "", edit_user_path(user.id),
  class: "fas fa-user-cog  btn btn-default btn-block " %>