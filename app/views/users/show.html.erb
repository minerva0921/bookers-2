<div class="container">
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  
  <div class="row">
    <div class="col-xs-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <h4>name</h4>
      <p><%= @user.name %></p>
      <h4>introduction</h4>
      <p><%= @user.introduction %></p>

      <% if @user.id == current_user.id %>
        <p><%= link_to "edit", edit_user_path(current_user.id) %></p>
      <% else %>
        <p><%= link_to "edit", user_path(current_user.id) %></p>
      <% end %>

      <h1>New book</h1>
      <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <p><%= f.submit 'Create Book' %></p>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          	<th>Title</th>
          	<th>Opinion</th>
          </tr>
        </thead>
        <% @user.books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size:'30x30' %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>